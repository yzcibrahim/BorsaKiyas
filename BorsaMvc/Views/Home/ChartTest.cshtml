<div class="row">

    <div class="col-md-8">
    <canvas id="myChart"></canvas>

    </div>
</div>

<div class="row">

    <div class="col-md-8">
        <canvas id="myChartBar"></canvas>

    </div>
</div>

<div class="row">

    <div class="col-md-8">
        <canvas id="myChartPie"></canvas>

    </div>
</div>

@section Scripts
{
    <script>
  const labels = [
    'January',
    'February',
    'March',
    'April',
    'May',
    'June',
  ];

  const data = {
    labels: labels,
    datasets: [{
      label: 'My First dataset',
      backgroundColor: 'rgb(255, 99, 132)',
      borderColor: 'rgb(255, 99, 132)',
      data: [0, 10, 5, 2, 20, 30, 45],
    },
        {
            label: 'My second dataset',
            backgroundColor: 'rgb(200, 50, 255)',
            borderColor: 'rgb(200, 50, 255)',
            data: [10, 20, 15, 20, 40, 60, 40],
        }


    ]
  };

  const config = {
    type: 'line',
    data: data,
    options: {}
        };

        const myChart = new Chart(
            document.getElementById('myChart'), config
        );

        const configBar = {
            type: 'bar',
            data: data,
            options: {}
        };

        const myChart1 = new Chart(
            document.getElementById('myChartBar'), configBar
        );

        const dataPie = {
            labels: labels,
            datasets: [{
                label: 'My First dataset',
                backgroundColor: ['rgb(255, 99, 132)','#FF0000','#00FF00','#0000FF','#AA0000','#00AA00','#0000AA'],
                data: [0, 10, 5, 2, 20, 30, 45],
               
            }]
        };


        const configPie = {
            type: 'pie',
            data: dataPie,
            options: {
                plugins: {
                    legend: {
                        position: 'bottom',
                    }
                }
            }
        };

        const myChart2 = new Chart(
            document.getElementById('myChartPie'), configPie
        );


    </script>
}